@using Egharpay.Extensions

@{
    ViewBag.Title = "Pincode";
}

<div ng-controller="PincodeController as model">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Pincodes <small></small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchPincode(searchField)" class="form-control" placeholder="Search for Pincode...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" ng-click="model.searchPincode(searchField)" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    @*@if (User.IsInAnyRoles("Admin"))
        {
            <div class="row">
                <div class="col-xs-12">
                    <a class="btn btn-app" href="@Url.Action("Create", "Subject")">
                        <i class="fa fa-user"></i> Create
                    </a>
                </div>
            </div>
        }*@
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    @*<h2>
                        Subjects <small></small>
                    </h2>*@
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th ng-click="model.order('OfficeName')" ng-class="model.orderClass('OfficeName')">Office Name</th>
                                            <th ng-click="model.order('PincodeNumber')" ng-class="model.orderClass('PincodeNumber')">Pincode Number</th>
                                            <th ng-click="model.order('TalukaName')" ng-class="model.orderClass('TalukaName')">Taluka Name</th>
                                            <th ng-click="model.order('DistrictName')" ng-class="model.orderClass('DistrictName')">District Name</th>
                                            <th ng-click="model.order('StateName')" ng-class="model.orderClass('StateName')">State Name</th>
                                            <th ng-click="model.order('RelatedSubOffice')" ng-class="model.orderClass('Type')">Related Sub-Office</th>
                                            <th ng-click="model.order('RelatedHeadOffice')" ng-class="model.orderClass('Type')">Related Head-Office</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="pincode in model.pincodes" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.editPincode(pincode.PincodeId)">
                                            <td><span ng-bind="pincode.OfficeName"></span></td>
                                            <td><span ng-bind="pincode.PincodeNumber"></span></td>
                                            <td><span ng-bind="pincode.TalukaName"></span></td>
                                            <td><span ng-bind="pincode.DistrictName"></span></td>
                                            <td><span ng-bind="pincode.StateName"></span></td>
                                            <td><span ng-bind="pincode.RelatedSubOffice"></span></td>
                                            <td><span ng-bind="pincode.RelatedHeadOffice"></span></td>
                                            <td>
                                                <div class="btn-group pull-right">
                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                        <i class="fa fa-chevron-down"></i>
                                                    </a>
                                                    <ul class="dropdown-menu slidedown">
                                                            <li>
                                                                <a style="cursor: pointer;" ng-href="#">
                                                                    Select
                                                                </a>
                                                            </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <label ng-bind="model.searchMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>