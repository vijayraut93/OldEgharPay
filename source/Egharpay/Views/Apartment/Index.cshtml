@using Egharpay.Extensions
@{
    ViewBag.Title = "Apartment";
}
<div ng-controller="ApartmentController as model">
    <div class="row">
        <div class="col-lg-12">
            <h3>
                Apartments
            </h3>
        </div>
    </div>

    <div class="row">
        @if (User.IsInAnyRoles("Admin"))
        {
            <div class="col-lg-12">
                <a class="btn btn-primary btn-lg" href="@Url.Action("Create", "Apartment")">
                    <i class="fa fa-user"></i> Create
                </a>
            </div>
        }
    </div>
    <br />
    <div class="ibox-content">
        <div class="row m-b-sm m-t-sm">
            <div class="col-md-12">
                <div class="input-group">
                    <input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                        <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                    </span>
                </div>
            </div>
            <div class="project-list">
            </div>
        </div>
        <div class="row m-b-sm m-t-sm">
            <div class="col-md-3 form-inline">
                @Html.Partial("Pagination/_pageSize")
            </div>
            <div class="col-md-9 text-right">
                @Html.Partial("Pagination/_pageInformation")
            </div>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-md-3" ng-repeat="apartment in model.apartments">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            [Info]
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                Active
                            </span>
                            @* <small class="text-muted"><span class="label label-info pull-left">Active</span></small>*@
                            <br />
                            <a href="#" class="product-name"><strong ng-bind="apartment.Name"></strong></a>
                            <div class="small m-t-xs">
                                Many desktop publishing packages and web page editors now.
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="m-t text-left">
                                        <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i class="fa fa-long-arrow-right"></i> </a>

                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="m-t text-right">
                                        <a href="#" class="btn btn-xs btn-outline btn-warning">Info <i class="fa fa-long-arrow-right"></i> </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-inline">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("Pagination/_pagination")
                </div>
            </div>
        </div>
    </div>
</div>
