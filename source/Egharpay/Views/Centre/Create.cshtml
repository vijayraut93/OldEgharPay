                    @Html.LabelFor(model => model.Centre.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBoxFor(model => model.Centre.Name, new { @class = "form-control col-md-7 col-xs-12" })
