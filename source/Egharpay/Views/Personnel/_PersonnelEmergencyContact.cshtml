@model Egharpay.Models.PersonnelProfileViewModel
<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <div class="row">
        <div class="col-xs-12">
            <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                <thead>
                    <tr role="row">
                        <th>Title</th>
                        <th>Forenames</th>
                        <th>Surname</th>
                        <th>Relationship</th>
                        <th>Telephone</th>
                        <th>Mobile</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emergencyContact in @Model.Personnel.EmergencyContacts)
                    {
                        <tr>
                            <td><span>@emergencyContact.Title</span></td>
                            <td><span>@emergencyContact.Forenames</span></td>
                            <td><span>@emergencyContact.Surname</span></td>
                            <td><span>@emergencyContact.Relationship</span></td>
                            <td><span>@emergencyContact.Telephone</span></td>
                            <td><span>@emergencyContact.Mobile</span></td>
                            <td>
                                <div class="btn-group pull-right">
                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                        <i class="fa fa-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown-menu slidedown">
                                        <li>
                                            <a style="cursor: pointer;" ng-href="/EmergencyContact/Details/@emergencyContact.EmergencyContactId">
                                                View
                                            </a>
                                        </li>
                                        <li>
                                            <a style="cursor: pointer;" ng-href="/EmergencyContact/Edit/@emergencyContact.EmergencyContactId">
                                                Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a style="cursor: pointer;" ng-href="/EmergencyContact/Delete/@emergencyContact.EmergencyContactId">
                                                Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
